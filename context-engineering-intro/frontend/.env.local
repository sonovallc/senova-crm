# ========================================
# Senova CRM - Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values
# ========================================

# ========================================
# API CONFIGURATION
# ========================================
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Production URLs:
# NEXT_PUBLIC_API_URL=https://api.senovallc.com
# NEXT_PUBLIC_WS_URL=wss://api.senovallc.com

# ========================================
# APPLICATION ENVIRONMENT
# ========================================
NODE_ENV=development  # development | production
NEXT_PUBLIC_ENVIRONMENT=development  # development | staging | production

# ========================================
# ANALYTICS
# ========================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=your-facebook-pixel-id

# Google Tag Manager (optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ========================================
# ERROR MONITORING (SENTRY)
# Sign up at: https://sentry.io/
# ========================================
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=1.0  # 1.0 = 100% in dev, 0.1 = 10% in prod

# ========================================
# PAYMENT GATEWAYS (PUBLIC KEYS)
# ========================================
# Stripe Publishable Key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Square Application ID
NEXT_PUBLIC_SQUARE_APPLICATION_ID=your-square-application-id
NEXT_PUBLIC_SQUARE_LOCATION_ID=your-square-location-id

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_CHAT_WIDGET=false
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_WEBSOCKET=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# ========================================
# WEBSITE CONFIGURATION
# ========================================
NEXT_PUBLIC_SITE_NAME=Senova CRM
NEXT_PUBLIC_SITE_URL=https://crm.senovallc.com
NEXT_PUBLIC_CONTACT_EMAIL=info@senovallc.com
NEXT_PUBLIC_CONTACT_PHONE=(555) 123-4567

# ========================================
# SOCIAL MEDIA
# ========================================
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/senovallc
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/senovallc
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/@senovallc

# ========================================
# MAP INTEGRATION (OPTIONAL)
# ========================================
# Google Maps API Key (for location map)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ========================================
# PRODUCTION SETTINGS
# When NODE_ENV=production, ensure:
# - Use production API URLs (HTTPS)
# - Use production analytics IDs
# - Use production Stripe/Square keys
# - NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1 (10% sampling)
# ========================================
