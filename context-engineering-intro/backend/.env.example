# ========================================
# Senova CRM - Backend Environment Variables
# Copy this file to .env and fill in your actual values
# ========================================

# ========================================
# APPLICATION SETTINGS
# ========================================
ENVIRONMENT=development  # development | staging | production
DEBUG=true  # Set to false in production
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# ========================================
# DATABASE
# ========================================
DATABASE_URL=postgresql+asyncpg://senova_crm_user:your_password@localhost:5432/senova_crm

# For Docker Compose:
# DATABASE_URL=postgresql+asyncpg://senova_crm_user:senova_dev_password@postgres:5432/senova_crm

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-for-api-credentials

# ========================================
# CORS & URLS
# ========================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,https://senovallc.com,https://crm.senovallc.com

# ========================================
# REDIS & CELERY
# ========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# For Docker Compose:
# REDIS_URL=redis://redis:6379/0

# ========================================
# BANDWIDTH.COM (SMS/MMS/VOICE)
# Sign up at: https://www.bandwidth.com/
# ========================================
BANDWIDTH_USERNAME=your-bandwidth-username
BANDWIDTH_PASSWORD=your-bandwidth-password
BANDWIDTH_ACCOUNT_ID=your-account-id
BANDWIDTH_APPLICATION_ID=your-application-id
BANDWIDTH_FROM_NUMBER=+15551234567

# ========================================
# MAILGUN (EMAIL)
# Sign up at: https://www.mailgun.com/
# ========================================
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.senovallc.com
MAILGUN_FROM_EMAIL=info@senovallc.com
MAILGUN_FROM_NAME=Senova

# ========================================
# STRIPE (PAYMENTS)
# Sign up at: https://stripe.com/
# ========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Production keys:
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PUBLISHABLE_KEY=pk_live_...

# ========================================
# SQUARE (PAYMENTS)
# Sign up at: https://squareup.com/
# ========================================
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_LOCATION_ID=your-location-id
SQUARE_ENVIRONMENT=sandbox  # sandbox | production
SQUARE_WEBHOOK_SECRET=your-webhook-secret

# ========================================
# PAYPAL (PAYMENTS)
# Sign up at: https://developer.paypal.com/
# ========================================
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # sandbox | live
PAYPAL_WEBHOOK_ID=your-webhook-id

# ========================================
# CASH APP (PAYMENTS)
# Sign up at: https://cash.app/business
# ========================================
CASHAPP_API_KEY=your-cashapp-api-key
CASHAPP_CLIENT_ID=your-client-id
CASHAPP_ENVIRONMENT=sandbox  # sandbox | production

# ========================================
# AI SERVICES
# ========================================
# Closebot AI - https://closebot.ai/
CLOSEBOT_API_KEY=your-closebot-api-key
CLOSEBOT_API_URL=https://api.closebot.ai/v1

# AudienceLab - Contact enrichment
AUDIENCELAB_API_KEY=your-audiencelab-api-key
AUDIENCELAB_API_URL=https://api.audiencelab.com/v1

# ========================================
# ERROR MONITORING (SENTRY)
# Sign up at: https://sentry.io/
# ========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development  # development | staging | production
SENTRY_TRACES_SAMPLE_RATE=1.0  # 1.0 = 100% in dev, 0.1 = 10% in prod
SENTRY_PROFILES_SAMPLE_RATE=1.0  # Performance profiling

# ========================================
# CLOUDFLARE (OPTIONAL)
# For DNS management and CDN
# ========================================
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# ========================================
# AWS S3 (FILE STORAGE - OPTIONAL)
# For storing uploaded files, images, etc.
# ========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=eve-crm-uploads
AWS_S3_REGION=us-east-1

# ========================================
# MONITORING & ANALYTICS (OPTIONAL)
# ========================================
# DataDog - https://www.datadoghq.com/
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# New Relic - https://newrelic.com/
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=eve-beauty-crm-backend

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_AI_FEATURES=true
ENABLE_MULTI_GATEWAY_PAYMENTS=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_SMS_CAMPAIGNS=true

# ========================================
# PRODUCTION SETTINGS
# When ENVIRONMENT=production, ensure:
# - DEBUG=false
# - Strong SECRET_KEY (32+ random characters)
# - HTTPS URLs for FRONTEND_URL and BACKEND_URL
# - Production API keys for all services
# - SENTRY_TRACES_SAMPLE_RATE=0.1 (10% sampling)
# - LOG_LEVEL=WARNING or ERROR
# ========================================
