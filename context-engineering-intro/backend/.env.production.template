# ========================================
# Senova CRM - PRODUCTION Environment Variables
# ========================================
# SECURITY: DO NOT commit this file with real values
# Copy to .env.production and fill in actual production values
# ========================================

# ========================================
# APPLICATION SETTINGS
# ========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# ========================================
# DATABASE
# ========================================
# Production PostgreSQL connection
# Replace with your actual production database credentials
DATABASE_URL=postgresql+asyncpg://PROD_USER:PROD_PASSWORD@postgres:5432/senova_crm

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
# Generate with: openssl rand -hex 32
# CRITICAL: Use a strong, unique key for production
SECRET_KEY=REPLACE_WITH_STRONG_SECRET_KEY_32_PLUS_CHARS

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Used to encrypt API credentials in database
ENCRYPTION_KEY=REPLACE_WITH_FERNET_ENCRYPTION_KEY

# Master owner password for initial database seeding
# Generate with: openssl rand -base64 24
MASTER_OWNER_PASSWORD=REPLACE_WITH_STRONG_MASTER_PASSWORD

# ========================================
# CORS & URLS
# ========================================
FRONTEND_URL=https://crm.senovallc.com
BACKEND_URL=https://crm.senovallc.com/api
ALLOWED_ORIGINS=https://crm.senovallc.com

# ========================================
# REDIS & CELERY (Docker internal networking)
# ========================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ========================================
# MAILGUN (EMAIL) - PRODUCTION KEYS
# ========================================
MAILGUN_API_KEY=REPLACE_WITH_PRODUCTION_MAILGUN_API_KEY
MAILGUN_DOMAIN=mg.senovallc.com
MAILGUN_FROM_EMAIL=info@senovallc.com
MAILGUN_FROM_NAME=Senova
MAILGUN_WEBHOOK_SIGNING_KEY=REPLACE_WITH_PRODUCTION_WEBHOOK_KEY

# ========================================
# BANDWIDTH.COM (SMS/MMS/VOICE) - PRODUCTION
# ========================================
BANDWIDTH_USERNAME=REPLACE_WITH_PRODUCTION_USERNAME
BANDWIDTH_PASSWORD=REPLACE_WITH_PRODUCTION_PASSWORD
BANDWIDTH_ACCOUNT_ID=REPLACE_WITH_PRODUCTION_ACCOUNT_ID
BANDWIDTH_APPLICATION_ID=REPLACE_WITH_PRODUCTION_APP_ID
BANDWIDTH_FROM_NUMBER=+1XXXXXXXXXX

# ========================================
# STRIPE (PAYMENTS) - PRODUCTION KEYS
# ========================================
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_PRODUCTION_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_PRODUCTION_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_PRODUCTION_WEBHOOK_SECRET

# ========================================
# ERROR MONITORING (SENTRY) - PRODUCTION
# ========================================
SENTRY_DSN=https://REPLACE_WITH_PRODUCTION_SENTRY_DSN@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ========================================
# CLOUDFLARE
# ========================================
CLOUDFLARE_API_TOKEN=REPLACE_WITH_PRODUCTION_TOKEN
CLOUDFLARE_ZONE_ID=REPLACE_WITH_ZONE_ID

# ========================================
# CLOUDINARY (FILE STORAGE)
# ========================================
CLOUDINARY_CLOUD_NAME=REPLACE_WITH_PRODUCTION_CLOUD_NAME
CLOUDINARY_API_KEY=REPLACE_WITH_PRODUCTION_API_KEY
CLOUDINARY_API_SECRET=REPLACE_WITH_PRODUCTION_API_SECRET

# ========================================
# AI SERVICES
# ========================================
CLOSEBOT_API_KEY=REPLACE_WITH_PRODUCTION_KEY
CLOSEBOT_API_URL=https://api.closebot.ai/v1

AUDIENCELAB_API_KEY=REPLACE_WITH_PRODUCTION_KEY
AUDIENCELAB_API_URL=https://api.audiencelab.com/v1

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_WORKFLOW_AUTOMATION=true
ENABLE_AI_FEATURES=true
ENABLE_MULTI_GATEWAY_PAYMENTS=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_SMS_CAMPAIGNS=true

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ========================================
# PRODUCTION CHECKLIST
# ========================================
# Before deploying, ensure:
# ✅ All REPLACE_WITH_* values have been replaced
# ✅ DEBUG=false
# ✅ Strong SECRET_KEY generated (32+ characters)
# ✅ Strong ENCRYPTION_KEY generated
# ✅ Strong MASTER_OWNER_PASSWORD generated
# ✅ Production API keys for all services
# ✅ SENTRY_TRACES_SAMPLE_RATE=0.1 (10% sampling)
# ✅ LOG_LEVEL=WARNING or ERROR
# ✅ HTTPS URLs only
# ✅ Database backups configured
# ✅ SSL/TLS certificates configured
# ========================================
